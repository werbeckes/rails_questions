<%= form_for :user, url: '/sessions/new', method: 'post' do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  <p>
  <p>
    <%= f.submit value="Log in" %>
  </p>
<% end %>
